<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        layout="@layout/content_patient_profile_info"/>

    <View
        android:id="@+id/patient_info_divider"
        android:layout_marginTop="16dp"
        android:layout_below="@id/content_profile_info_layout"
        android:layout_width="match_parent"
        android:background="@drawable/full_divider"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/header"
        android:layout_below="@+id/patient_info_divider"
        android:paddingTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray54"
        android:textSize="24sp"/>

</RelativeLayout>